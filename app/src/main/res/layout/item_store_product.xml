<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:clickable="true"
    android:foreground="@drawable/custom_bg"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:minHeight="80dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:padding="@dimen/spacing_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/def_logo"
                android:visibility="visible" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:maxLines="2"
                            android:paddingStart="10dp"
                            android:paddingTop="5dp"
                            android:paddingEnd="10dp"
                            android:singleLine="false"
                            android:text="Lorem ipsum dolor sit amet."
                            android:textColor="@color/defaultBlackColor"
                            android:textFontWeight="300"
                            android:textSize="14dp" />

                        <TextView
                            android:paddingTop="@dimen/spacing_xsmall"
                            android:paddingBottom="@dimen/spacing_xsmall"
                            android:paddingStart="@dimen/spacing_xmedium"
                            android:paddingEnd="@dimen/spacing_xmedium"
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:background="@drawable/rounded_layout_item"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="true"
                            android:gravity="bottom"
                            android:padding="@dimen/spacing_small"
                            android:text="0$"
                            android:textColor="@color/defaultWhiteColor"
                            android:textFontWeight="300"
                            android:textSize="12sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:maxLines="2"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:singleLine="false"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit.Lorem ipsum dolor sit amet, consectetur adipiscing elit.Lorem ipsum dolor sit amet, consectetur adipiscing elit.Lorem ipsum dolor sit amet, consectetur adipiscing elit.Lorem ipsum dolor sit amet, consectetur adipiscing elit.Lorem ipsum dolor sit amet, consectetur adipiscing elit.Lorem ipsum dolor sit amet, consectetur adipiscing elit.Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                        android:textSize="11dp" />


                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </FrameLayout>

</androidx.cardview.widget.CardView>

