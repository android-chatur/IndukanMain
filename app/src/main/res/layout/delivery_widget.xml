<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/delivery_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_middle"
    android:background="@color/colorPrimaryGradient"
    android:foreground="@drawable/custom_bg"
    app:cardCornerRadius="@dimen/rounded_radius"
    app:cardElevation="4dp"
    android:visibility="gone"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryGradient"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_middle">

        <LinearLayout
            android:id="@+id/left_side"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_large"
            android:paddingEnd="@dimen/spacing_large">

            <TextView
                android:id="@+id/deliver_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Dealfly delivery"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/title_size_small"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:text="@string/delivery_app_description"
                android:textColor="@color/colorWhite"
                android:textSize="13sp"
                android:textStyle="italic" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/right_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_middle"
            android:layout_toRightOf="@id/left_side"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/delievry_icon"
                android:tint="#cb3d0f" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>