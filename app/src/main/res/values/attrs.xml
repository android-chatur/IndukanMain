        <attr name="offerItemHeight" format="dimension" />
        <attr name="offerItemWidth" format="dimension" />
        <attr name="ocvLoader" format="boolean" />
    </declare-styleable>




    <declare-styleable name="TintableImageView">
        <attr name="tint" format="reference|color" />
    </declare-styleable>
